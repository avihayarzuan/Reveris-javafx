<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox fx:id="root" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GameController">
   <children>
   	<VBox prefHeight="371.0" prefWidth="152.0" spacing="10">
      <children>
            <Label fx:id="turn" prefHeight="27.0" prefWidth="98.0" />
            <Label text="Player 1 points:" />
            <Label fx:id="player1Points" prefHeight="27.0" prefWidth="79.0" />
            <Label text="Player 2 points:" />
            <HBox prefHeight="108.0" prefWidth="152.0">
               <children>
                  <Label fx:id="player2Points" prefHeight="27.0" prefWidth="81.0" />
               </children>
            </HBox>
            <VBox prefHeight="86.0" prefWidth="152.0">
               <children>
                  <Button fx:id="exitButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleExit" prefHeight="39.0" prefWidth="129.0" text="Exit Game">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin></Button>
                  <HBox prefHeight="0.0" prefWidth="152.0" />
               </children>
            </VBox>
      </children>
   	</VBox>
   </children>
</HBox>
