<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<BorderPane prefHeight="407.0" prefWidth="456.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="reversiApp.SettingsController">
	<top>
		<TextField alignment="CENTER" editable="false" text="Settings" BorderPane.alignment="CENTER">
			<font>
				<Font name="Arial Black" size="35.0" />
			</font>
		</TextField>
	</top>
	<center>
		<VBox>
			<children>
				<HBox prefHeight="70.0" prefWidth="600.0" BorderPane.alignment="CENTER">
					<children>
						<TextField alignment="CENTER" editable="false" prefHeight="43.0" prefWidth="237.0" text="First player color:">
							<opaqueInsets>
								<Insets bottom="50.0" left="50.0" top="50.0" />
							</opaqueInsets>
							<font>
								<Font name="Arial Bold" size="18.0" />
							</font>
							<HBox.margin>
								<Insets left="30.0" top="30.0" />
							</HBox.margin>
						</TextField>
						<HBox prefHeight="323.0" prefWidth="45.0" />
						<ColorPicker fx:id="firstPlayerColor" editable="true" prefHeight="41.0" prefWidth="140.0">
							<value>
								<Color blue="0.0" green="0.0" red="0.0" />
							</value>
							<opaqueInsets>
								<Insets bottom="50.0" left="50.0" top="50.0" />
							</opaqueInsets>
							<HBox.margin>
								<Insets right="20.0" top="30.0" />
							</HBox.margin>
						</ColorPicker>
					</children>
					<opaqueInsets>
						<Insets top="30.0" />
					</opaqueInsets>
				</HBox>
				<HBox prefHeight="75.0" prefWidth="600.0">
					<children>
						<TextField alignment="CENTER" editable="false" prefHeight="43.0" prefWidth="236.0" text="Second player color:">
							<font>
								<Font name="Arial Bold" size="18.0" />
							</font>
							<opaqueInsets>
								<Insets bottom="50.0" left="50.0" top="50.0" />
							</opaqueInsets>
							<HBox.margin>
								<Insets left="30.0" top="30.0" />
							</HBox.margin>
						</TextField>
						<HBox prefHeight="43.0" prefWidth="45.0" />
						<ColorPicker fx:id="secondPlayerColor" editable="true" prefHeight="41.0" prefWidth="140.0">
							<opaqueInsets>
								<Insets bottom="50.0" left="50.0" top="50.0" />
							</opaqueInsets>
							<HBox.margin>
								<Insets right="20.0" top="30.0" />
							</HBox.margin>
						</ColorPicker>
					</children>
				</HBox>
				<HBox prefHeight="417.0" prefWidth="600.0">
					<children>
						<TextField alignment="CENTER" editable="false" prefHeight="43.0" prefWidth="234.0" text="Board Size:">
							<font>
								<Font name="Arial Bold" size="18.0" />
							</font>
							<opaqueInsets>
								<Insets bottom="50.0" left="50.0" top="50.0" />
							</opaqueInsets>
							<HBox.margin>
								<Insets left="30.0" top="30.0" />
							</HBox.margin>
						</TextField>
						<HBox prefHeight="177.0" prefWidth="45.0" />
						<ChoiceBox fx:id="sizeChoice" prefWidth="100.0">
							<HBox.margin>
								<Insets top="30.0" />
							</HBox.margin>
						</ChoiceBox>
					</children>
				</HBox>
			</children>
		</VBox>
	</center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefHeight="39.0" prefWidth="89.0" text="Save">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <Button fx:id="returnButton" mnemonicParsing="false" onAction="#handleReturn" prefHeight="39.0" prefWidth="88.0" text="Return">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
